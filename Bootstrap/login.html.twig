            {% for type, messages in app.flashes %}
            {% for msg in messages %}
            $('.login-wrapper').pgNotification({
                style: 'flip',
                message: '{{ msg }}',
                position: 'top-right',
                timeout: 2500,
                type: '{{ type }}'
            }).show();
            {% endfor %}
            {% endfor %}
            $(function()
            {
                $('#form-login').validate()
            })
        </script>
    {% endblock %}
    </body>
{% endblock %}