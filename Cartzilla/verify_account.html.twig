{% extends 'TemplatesSITELogin/Cartzilla/base.html.twig' %}
{% block title %}Check email to confirm account{% endblock %}
{% block description %}{% endblock %}
{% block keywords %}{% endblock %}
{% block content %}
<div class="container py-5 mb-lg-3">
    <div class="row justify-content-center pt-lg-4">
        <div class="col-sm-9">
            <div class="card border-0 box-shadow">
                <div class="card-body text-center">

                    <h1>{{ 'site.login.verify_account.heading'|trans}}</h1>
                    <p>{{ 'site.login.verify_account.subheading'|trans({'%display_email%': display_email})}}</p>
                    <a href="{{ path('site_login_forgot') }}" class="btn btn-primary transition-3d-hover text-white-hover" >{{ 'site.login.verify_account.cta_forgot'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}