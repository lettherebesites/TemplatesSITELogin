{% extends 'TemplatesSITECore/Cartzilla/base.html.twig' %}
{% block body_container %}
<body class="toolbar-enabled bg-secondary">
{% block body %}
    {% block header %}
        {% if config.template_alter_code %}
            {% include 'TemplatesSITECore/Cartzilla/'~config.template_alter_code~'/_header.html.twig'  ignore missing  %}
        {% else %}
            {{ include('TemplatesSITECore/Cartzilla/_header.simple.html.twig', {light_header: true}) }}
        {% endif %}
    {% endblock %}
<!-- ========== MAIN ========== -->
<div class="container py-4 py-lg-5 my-4">
    <div class="row">
        <div class="col-sm-12 col-md-10 offset-md-1">
            {% block content %}{% endblock %}
        </div>
    </div>
</div>
<!-- ========== END MAIN ========== -->

    {% block footer %}
        {% if config.template_alter_code %}
            {% include 'TemplatesSITECore/Cartzilla/'~config.template_alter_code~'/_footer.sticky.html.twig' ignore missing  %}
        {% else %}
            {{ include('TemplatesSITECore/Cartzilla/_footer.sticky.html.twig') }}
        {% endif %}
    {% endblock %}
{% endblock %}
{% block javascripts %}{{ parent() }}{% endblock %}
</body>
{% endblock %}

