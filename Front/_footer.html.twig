<!-- ========== FOOTER ========== -->
<footer class="position-md-absolute right-md-0 bottom-md-0 left-md-0">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center space-1">
            <!-- Copyright -->
            <p class="small text-muted mb-0">&copy; {{ 'global.app.company' | trans }} {{ "now"|date("Y") }}</p>
            <!-- End Copyright -->

            <!-- Social Networks -->
            <ul class="list-inline mb-0">
                {% if config.social.fb %}
                    <li class="list-inline-item">
                        <a class="btn btn-sm btn-icon btn-soft-secondary btn-bg-transparent" href="{{ config.social.fb|default('#') }}">
                            <span class="fab fa-facebook-f btn-icon__inner"></span>
                        </a>
                    </li>
                {% endif %}
                {% if config.social.instagram %}
                    <li class="list-inline-item">
                        <a class="btn btn-sm btn-icon btn-soft-secondary btn-bg-transparent" href="{{ config.social.instagram|default('#') }}">
                            <span class="fab fa-instagram btn-icon__inner"></span>
                        </a>
                    </li>
                {% endif %}
                {% if config.social.google %}
                    <li class="list-inline-item">
                        <a class="btn btn-sm btn-icon btn-soft-secondary btn-bg-transparent" href="{{ config.social.google|default('#') }}">
                            <span class="fab fa-google btn-icon__inner"></span>
                        </a>
                    </li>
                {% endif %}
                {% if config.social.twitter %}
                    <li class="list-inline-item">
                        <a class="btn btn-sm btn-icon btn-soft-secondary btn-bg-transparent" href="{{ config.social.twitter|default('#') }}">
                            <span class="fab fa-twitter btn-icon__inner"></span>
                        </a>
                    </li>
                {% endif %}
                {% if config.social.github %}
                    <li class="list-inline-item">
                        <a class="btn btn-sm btn-icon btn-soft-secondary btn-bg-transparent" href="{{ config.social.github|default('#') }}">
                            <span class="fab fa-github btn-icon__inner"></span>
                        </a>
                    </li>
                {% endif %}
            </ul>
            <!-- End Social Networks -->
        </div>
    </div>
</footer>
<!-- ========== END FOOTER ========== -->